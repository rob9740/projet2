{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Liste des bières</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Images</th>
                <th>Volume</th>
                <th>Degre</th>
                <th>Gout</th>
                <th>country</th>
                <th>Marque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.imageFilename }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.degre }}</td>
                <td>{{ article.gout }}</td>
                <td>{{ article.country }}</td>
                <td>{{ article.marque }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-pen-fancy"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Vous n'avez aucun livre</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}"><i class="fas fa-plus-square"></i>Ajoutez bière</a>
{% endblock %}
