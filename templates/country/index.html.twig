{% extends 'base.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block body %}




<div class="pays">
    <h1 class="text-center mt-4">{{country}}</h1>
</div>
<div class="container">
<div class="card-group">
{% for article in articles %}
<div class="col-sm-4 mb-3">
  <div class="card">
    <img class="card-img-top" src={{ asset('img/' ~ article.imageFilename) }} alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{article.title}}</h5>
      <p class="card-text"><small class="text-danger">DESCRIPTION</small></p>
      <p class="card-text"><span class="bold">{{article.description}}</span></p>
      <p class="card-text"><small class="text-danger">VOLUME</small></p>
      <p class="card-text"><span class="bold">{{article.volume}} cl</span></p>
      <p class="card-text"><small class="text-danger">DEGRÉ</small></p>
      <p class="card-text"><span class="bold">{{article.degre}} °</span></p>
      <p class="card-text"><small class="text-danger">GOÛT</small></p>
      <p class="card-text"><span class="bold">{{article.gout}}</span></p>
      <p class="card-text"><small class="text-danger">BRASSERIE</small></p>
      <p class="card-text"><span class="bold">{{article.marque}}</span></p>
      
      
    </div>
  </div>
  </div><!-- FIN COL SM3 -->
  {% endfor %}
</div>
</div><!-- FIN CONTAINER  -->





{% endblock %}


