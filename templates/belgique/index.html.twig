{% extends 'base.html.twig' %}


{% block title %}Hello BelgiqueController!{% endblock %}

{% block body %}




<div class="pays">
    <h1 class="text-center mt-4">BELGIQUE</h1>
</div>
<div class="container">
<div class="card-group">
{% for article in articles %}
<div class="col-sm-4 mb-3">
  <div class="card">
    <img class="card-img-top" src={{ asset('img/' ~ article.imageFilename) }} alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{article.title}}</h5>
      <p class="card-text">{{article.description}}</p>
      <p class="card-text">{{article.price}}</p>
    </div>
  </div>
  </div><!-- FIN COL SM3 -->
  {% endfor %}
</div>
</div><!-- FIN CONTAINER  -->









{% endblock %}
